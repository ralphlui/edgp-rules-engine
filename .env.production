# Production Server Configuration
HOST=0.0.0.0
PORT=8008

# Environment
ENVIRONMENT=production

# API Configuration
API_TITLE=EDGP Rules Engine API
API_VERSION=1.0.0
API_DESCRIPTION=Data Quality Validation API using Great Expectations rules

# CORS Configuration - Production (More Restrictive)
# Replace these with your actual frontend domain(s)
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com","https://api.yourdomain.com"]

# AWS SQS Configuration - Production Environment
# Set these values according to your production AWS setup
SQS_AWS_ACCESS_KEY_ID=your_prod_access_key_here
SQS_AWS_SECRET_ACCESS_KEY=your_prod_secret_key_here
SQS_AWS_REGION=us-east-1
SQS_AWS_SESSION_TOKEN=

# SQS Queue URLs - Production Environment (replace with your actual queue URLs)
SQS_INPUT_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/prod-validation-input-queue
SQS_OUTPUT_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/prod-validation-output-queue
SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789012/prod-validation-dlq

# Legacy support (can be removed later)
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/prod-validation-input-queue
SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789012/prod-validation-dlq

# SQS Processing Configuration - Production
SQS_MAX_MESSAGES_PER_POLL=10
SQS_VISIBILITY_TIMEOUT=300
SQS_WAIT_TIME_SECONDS=20
SQS_POLL_INTERVAL=5
SQS_MAX_RETRY_DELAY=300

# Worker Configuration - Production (Higher performance)
SQS_WORKER_COUNT=8
SQS_AUTO_START_WORKERS=true
SQS_MAX_RETRIES=5
SQS_RETRY_DELAY=30

# Processing Limits - Production
SQS_PROCESSING_TIMEOUT=180
SQS_BATCH_PROCESSING=true

# Health Check - Production
SQS_HEALTH_CHECK_INTERVAL=30
